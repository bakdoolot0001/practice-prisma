generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String                                 
  description String?
  price       Float                               
  createdAt   DateTime @default(now())               
  updatedAt   DateTime @updatedAt                    
  teacherId   Int                                    
}


model User {
  id         Int @id @default(autoincrement())
  name       String
  email      String @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}